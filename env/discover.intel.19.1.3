def_lishydro_minpack="/discover/nobackup/projects/lis/libs/minpack/intel_11_1_038"
def_lishydro_crtm="/discover/nobackup/projects/lis/libs/JCSDA_CRTM/REL-2.0.2.Surface-rev_intel_18_0_3_222"
def_lishydro_crtm_prof="/discover/nobackup/projects/lis/libs/CRTM_Profile_Utility/intel_18_0_3_222"
def_lishydro_cmem="/discover/nobackup/projects/lis/libs/LIS-MEM/intel_18_0_3_222"
