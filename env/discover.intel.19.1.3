#!/bin/bash

# check for LISHYDRO source directory
if [ -z "${LISHYDRO_DIR}" ] ; then
  echo "ERROR: Please set LISHYDRO_DIR to root directory of cloned repository."
  exit 1
fi
if [ ! -d "${LISHYDRO_DIR}" ]; then
  echo "ERROR: ${LISHYDRO_DIR} directory does not exist."
  exit 1
fi

# load modules
source /etc/profile.d/modules.sh
module purge
module load comp/gcc/9.2.0
module load comp/intel/19.1.3.304
module load mpi/impi/20.0.0.166
module load tview/2019.0.4
module load git/2.24.0
module load cmake/3.15.5
module list

# define library paths
def_lishydro_jpeg="/discover/nobackup/projects/lis/libs/jpeg/8d_sles12.3"
