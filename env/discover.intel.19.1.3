def_lishydro_netcdf="/discover/nobackup/projects/lis/libs/netcdf/4.5.0_intel-19.1.0.166_sles12.3"
def_lishydro_hdf4="/discover/nobackup/projects/lis/libs/hdf4/4.2.13_intel-19.1.0.166_sles12.3"
def_lishydro_hdfeos="/discover/nobackup/projects/lis/libs/hdfeos2/2.19v1.00_intel-19.1.0.166_sles12.3"
