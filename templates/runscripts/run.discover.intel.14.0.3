#!/bin/bash
#SBATCH --job-name=NASA-Land-Coupler
#SBATCH --ntasks=__TASKS__
#SBATCH --time=__TIME__
#SBATCH --partition=compute
#SBATCH --account=s1657
#SBATCH --constraint=hasw
#SBATCH --qos=serial
#SBATCH --output=job.log

export NLC_DIR=${SLURM_SUBMIT_DIR}/../..
export NLC_JOBID=${SLURM_JOB_ID}
source ${NLC_DIR}/env/discover.intel.14.0.3

# set umask
umask 022
# set limits
ulimit -t unlimited
ulimit -f unlimited
ulimit -d unlimited
ulimit -s unlimited
ulimit -c unlimited

echo "Job ID: ${NLC_JOBID}"

s_tm=`date +%s`
s_hr=`date +%H`; s_mn=`date +%M`; s_sc=`date +%S`
echo "Model Start    ${s_hr}:${s_mn}:${s_sc}"

mpirun -np __TASKS__ ./NLC.exe >& lishydro.log
exec_s=$?

e_tm=`date +%s`
e_hr=`date +%H`; e_mn=`date +%M`; e_sc=`date +%S`
echo "Model End      ${e_hr}:${e_mn}:${e_sc}"

r_tm=$(( ${e_tm} - ${s_tm} ))
r_hr=$(( ${r_tm} / 3600 ))
r_mn=$(( ${r_tm} % 3600 / 60 ))
r_sc=$(( ${r_tm} % 60 ))
echo "Model Runtime  ${r_hr}:${r_mn}:${r_sc}"

if [ $exec_s -ne 0 ]; then
  echo "RESULT: ERROR ${exec_s}"
else
  echo "RESULT: SUCCESS"
fi
