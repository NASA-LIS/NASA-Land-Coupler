#!/bin/bash
#PBS -N LISHydro
#PBS -A P48500028
#PBS -l walltime=__TIME__
#PBS -q regular
#PBS -j oe
#PBS -o run.log
#PBS -l select=__NODES__:ncpus=36:mpiprocs=36

export LISHYDRO_DIR=${PBS_O_WORKDIR}/../..
export LISHYDRO_JOBID=${PBS_JOBID}
source ${LISHYDRO_DIR}/env/cheyenne.intel.17.0.1

# set umask
umask 022
# set limits
ulimit -t unlimited
ulimit -f unlimited
ulimit -d unlimited
ulimit -s unlimited
ulimit -c unlimited
ulimit -m unlimited

echo "Job ID: ${LISHYDRO_JOBID}"

s_tm=`date +%s`
s_hr=`date +%H`; s_mn=`date +%M`; s_sc=`date +%S`
echo "Model Start    ${s_hr}:${s_mn}:${s_sc}"

mpirun -np __TASKS__ ./LISHydroApp >& lishydro.log
exec_s=$?

e_tm=`date +%s`
e_hr=`date +%H`; e_mn=`date +%M`; e_sc=`date +%S`
echo "Model End      ${e_hr}:${e_mn}:${e_sc}"

r_tm=`expr ${e_tm} - ${s_tm}`
r_hr=`expr ${r_tm} / 3600`
r_mn=`expr ${r_tm} % 3600 / 60`
r_sc=`expr ${r_tm} % 60`
echo "Model Runtime  ${r_hr}:${r_mn}:${r_sc}"

if [ $exec_s -ne 0 ]; then
  echo "RESULT: ERROR ${exec_s}"
else
  echo "RESULT: SUCCESS"
fi
